{
  "name": "arepl",
  "productName": "arepl",
  "version": "1.0.0-alpha.1",
  "description": "A python scratchpad with real-time code evaluation",
  "main": "main.js",
  "scripts": {
    "start": "concurrently \"electron .\" \"npm run compilePug\"",
    "compilePug": "pug -w view/index.pug -o ./",
    "releaseBuild": "electron-packager . --overwrite",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "repository": "https://github.com/Almenon/AREPL",
  "keywords": [
    "Electron",
    "IDE",
    "python",
    "real-time",
    "scratchpad"
  ],
  "author": "Almenon",
  "devDependencies": {
    "@types/codemirror": "0.0.41",
    "@types/jquery": "^3.2.6",
    "concurrently": "^3.5.0",
    "devtron": "^1.4.0",
    "electron": "^1.6.11",
    "electron-builder": "^19.26.0",
    "electron-updater": "^2.8.7",
    "pug-cli": "^1.0.0-alpha6"
  },
  "dependencies": {
    "electron-context-menu": "^0.9.1",
    "jquery": "^3.2.1",
    "python-shell": "^0.4.0"
  },
  "build": {
    "publish": "github"
  }
}
