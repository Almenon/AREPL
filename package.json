{
  "name": "arepl",
  "productName": "arepl",
  "version": "1.0.0-alpha.5",
  "description": "A python scratchpad with real-time code evaluation",
  "main": "src/electron/main.js",
  "scripts": {
    "start": "concurrently \"electron .\" \"npm run compilePug\"",
    "compilePug": "pug -w view/index.pug -o view",
    "releaseBuildWin": "electron-packager . --overwrite",
    "releaseBuildMac": "electron-packager . --overwrite --platform=darwin",
    "releaseBuildLinux": "electron-packager . --overwrite --platform=linux",
    "test": "mocha --ui tdd src/*.test.js",
    "appveyorTest": "mocha --ui tdd --reporter mocha-appveyor-reporter src/*.test.js & exit 0"
  },
  "repository": "https://github.com/Almenon/AREPL",
  "keywords": [
    "Electron",
    "IDE",
    "python",
    "real-time",
    "scratchpad"
  ],
  "author": "Almenon",
  "devDependencies": {
    "@types/codemirror": "0.0.41",
    "@types/jquery": "^3.2.15",
    "@types/mocha": "^2.2.44",
    "concurrently": "^3.5.0",
    "devtron": "^1.4.0",
    "mocha": "^3.5.3",
    "mocha-appveyor-reporter": "^0.4.0",
    "pug-cli": "^1.0.0-alpha6"
  },
  "dependencies": {
    "electron": "^1.8.1",
    "electron-context-menu": "^0.9.1",
    "electron-updater": "^2.15.1",
    "jquery": "^3.2.1",
    "python-shell": "^0.4.0"
  }
}
